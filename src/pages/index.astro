---
import Layout from "@layouts/Layout.astro";
import { SITE } from "@config";
---

<Layout title={`${SITE.title}`} description={SITE.desc}>
  <section class="pb-12">
    <h1 class="text-2xl font-semibold sm:text-3xl">Recent Posts</h1>
    <p class="mt-2 text-gray-700 dark:text-gray-300">
      All the latest news, reviews and guides on AI Productivity Tools.
    </p>

    <p class="mt-8 text-center text-lg">
      No posts yet. Check back soon!
    </p>
  </section>
</Layout>
